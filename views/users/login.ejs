<% layout('layout/boilerplate') %>


    <div class="container d-flex justify-content-center align-items-center mt-3">
        <div class="row" style="min-width: 50rem;">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4 mb-3">
                <div class="card shadow">
                    <img src="https://res.cloudinary.com/daxy8axxm/image/upload/v1655418129/HotelPedia/photo-1582719508461-905c673771fd_f96vcv.jpg"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Login</h5>
                        <form action="/login" method="POST" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" autofocus
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="d-grid gap-2 mb-3 mt-4">
                                    <button class="btn btn-success">Login</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>