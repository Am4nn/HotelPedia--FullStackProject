<% layout('layout/boilerplate') %>

    <div id="cluster-map" class="mb-3"></div>

    <h1>All Hotels</h1>
    <hr>
    <ul>
        <% for(let hotel of hotels) { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" alt="" src=<%=hotel.images.length !==0 ? hotel.images[0].url
                            : "" %> >
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= hotel.title %>
                            </h5>
                            <p class="card-text">
                                <%= hotel.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= hotel.location %>
                                </small>
                            </p>
                            <a href="/hotels/<%= hotel._id %>" class="btn btn-primary">View <%=
                                    hotel.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>

    <script>
        const mapToken = '<%= process.env.MAPBOX_TOKEN %>';
        const hotels = { features: <%- JSON.stringify(hotels) %>}
    </script>

    <script src="javascripts/clusterMap.js"></script>